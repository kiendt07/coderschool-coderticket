<div class="container event-new">
  <div class="row">
    <h1 class="title">
      Create new event
    </h1>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= form_for @event do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-input' %>


        <div class="form-group">
          <%= f.label :starts_at %>
          <div class='input-group date' id='datetimepicker1'>
            <%= f.text_field :starts_at, class: 'form-control' %>
            <span class="input-group-addon">
              <i class="fa fa-calendar" aria-hidden="true"></i>
            </span>
          </div>
        </div>
        <script type="text/javascript">
        $(function () {
          $('#datetimepicker1').datetimepicker();
        });
        </script>


        <div class="form-group">
            <%= f.label :ends_at %>
            <div class='input-group date' id='datetimepicker2'>
                <%= f.text_field :ends_at, class: 'form-control' %>
                <span class="input-group-addon">
                  <i class="fa fa-calendar" aria-hidden="true"></i>
                </span>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker2').datetimepicker();
            });
        </script>

        <%= f.label :venue %>
        <%= f.collection_select :venue_id, Venue.all, :id, :name %>

        <%= f.label :category %>
        <%= f.collection_select :category_id, Category.all, :id, :name %>

        <label for="hero_image_url">Image URL</label>
        <%= f.text_field :hero_image_url %>
        <label for="extended_html_description">Extended description (HTML)</label>
        <%= f.text_area :extended_html_description %>

        <%= f.submit 'OK', class: 'btn btn-block btn-success' %>
      <% end %>
    </div>
  </div>
</div>


<script>
$( function() {
  $( "#datepicker" ).datepicker();
} );
</script>

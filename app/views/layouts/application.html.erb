<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Edit Profile', edit_user_registration_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Booked', receipts_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'New event', new_event_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to('My events', mine_events_path, class: 'nav-link') %>
        </li>
        <li class="nav-item">
          <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'nav-link') %>
        </li>

      <% else %>


        <li class="nav-item">
          <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </nav>

  <%= flash_messages %>

<%= yield %>

</body>
</html>
